<div class="bg-secondary modal-body" style="height: calc(100vh); overflow-y: auto;">
  <div class="text-center mt-5">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-4" }) do |f| %>
      <div class="form-group" style="max-width: 300px; margin: 0 auto;">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group" style="max-width: 300px; margin: 0 auto;">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group" style="max-width: 300px; margin: 0 auto;">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group" style="max-width: 300px; margin: 0 auto;">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
